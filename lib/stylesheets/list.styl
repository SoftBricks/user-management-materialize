.um
  .divider
    margin-left 16px

  .list-item
    padding 0 16px
    position relative
    color #4D4D4E
    height 72px
    line-height 72px
    font-weight 400

    &:hover
      background rgba(0,0,0,0.05)

    > *
      position absolute
      top 0
      bottom 0
      display flex
      align-items center

      > *
        line-height normal
        > .secondary
          font-weight 300

    > :first-child
      left 16
      > i
        font-size 24px
        color rgba(0,0,0,0.54)

    > :nth-child(2)
      left 72px

    > :last-child
      right 16px

  .list-heading
  	padding 0 16px
  	height 32px
  	line-height 32px
  	font-size 12px
  	color #999999
