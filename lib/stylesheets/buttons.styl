.fixed-action-btn
	bottom 15px
	right 15px

.btn-icon
  display inline-block
  color #000
  position relative
  overflow hidden
  z-index 1
  width 37px
  height 37px
  line-height 37px
  padding 0
  border-radius 50%
  transition .3s
  cursor pointer
  vertical-align middle

  i
    width inherit
    display inline-block
    text-align center
    color #000
    font-size 1.6rem
    line-height 37px
  &:before
    border-radius 0
  &.btn-large
    width 55.5px
    height 55.5px
    i
      line-height 55.5px

button.btn-icon
	border none
